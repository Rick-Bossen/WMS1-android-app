<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.WMS1.drawful">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".activities.game.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.game.WaitingForVotingActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activities.game.WaitingForGuessingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.game.ShowingScoresActivity"
            android:screenOrientation="portrait"/>

        <service android:name=".services.GameHandlerService" />
        <activity
            android:name=".activities.game.GameFinishedActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.game.DrawingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.game.VoteResultsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.game.VotingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.game.GuessingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.game.WaitingForDrawingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.room.LobbyActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.general.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.room.JoinActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.user.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.user.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.general.MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>